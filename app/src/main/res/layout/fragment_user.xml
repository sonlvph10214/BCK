<?xml version="1.0" encoding="utf-8"?>
<layout

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/imgAcc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/accout"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvTenUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Son Le"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_below="@id/cardView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvThongTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenUser"
        android:layout_marginTop="50dp"
        android:background="@drawable/bo_thongtin"
        android:drawableLeft="@drawable/ic_user"
        android:drawableRight="@drawable/ic_arrow"
        android:drawablePadding="10dp"
        android:text="Thông tin và Liên hệ"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tvThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh Toán"
        android:textSize="20dp"
        android:layout_below="@id/tvThongTin"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_thanhtoan"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_arrow"
        android:background="@drawable/bo_thongtin"/>
    <TextView
        android:id="@+id/tvDoiMK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật Khẩu"
        android:textSize="20dp"
        android:layout_below="@id/tvThanhToan"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_arrow"
        android:drawableLeft="@drawable/outline_lock"
        android:drawablePadding="10dp"
        android:background="@drawable/bo_thongtin"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#BAB5B5"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvDoiMK"/>

    <TextView
        android:id="@+id/tvUngDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginTop="20dp"
        android:background="@drawable/bo_thongtin"
        android:drawableRight="@drawable/ic_arrow"
        android:drawableLeft="@drawable/ic_home"
        android:drawablePadding="10dp"
        android:text="Ứng Dụng Cho Chủ Quán"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvChinhSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUngDung"
        android:layout_marginTop="10dp"
        android:background="@drawable/bo_thongtin"
        android:drawableRight="@drawable/ic_arrow"
        android:drawableLeft="@drawable/ic_chinhsach"
        android:drawablePadding="10dp"
        android:text="Chính Sách Hỗ Trợ"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvGioiThieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvChinhSach"
        android:layout_marginTop="10dp"
        android:background="@drawable/bo_thongtin"
        android:drawableRight="@drawable/ic_arrow"
        android:drawableLeft="@drawable/ic_gioithieu"
        android:drawablePadding="10dp"
        android:text="Về Chúng Tôi"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnDangXuat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Đăng Xuất"
        android:layout_below="@id/tvGioiThieu"
        android:layout_marginTop="20dp"
        android:background="#EA9378"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</layout>